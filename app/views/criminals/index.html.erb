<p id="notice"><%= notice %></p>

<h1>Criminals</h1>

<% form_tag criminals_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zip</th>
      <th>Date</th>
      <th>Plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criminals.each do |criminal| %>
      <tr>
        <td><%= criminal.name %></td>
        <td><%= criminal.zip %></td>
        <td><%= criminal.date %></td>
        <td><%= criminal.plate %></td>
        <td><%= link_to 'Show', criminal %></td>
        <td><%= link_to 'Edit', edit_criminal_path(criminal) %></td>
        <td><%= link_to 'Destroy', criminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Criminal', new_criminal_path %>
